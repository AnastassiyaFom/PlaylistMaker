<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_playlists"
    android:background="@color/background_not_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <Button
            android:id="@+id/new_playlist"
            style="@style/LittleButton"
            android:layout_marginTop="24dp"
            android:text="@string/new_playlist"
            android:padding = "14dp"
            android:paddingStart = "20dp"
            android:paddingEnd = "20dp"
            android:layout_gravity="center|top"

            />
        <TextView
            android:id="@+id/error_no_playlists"
            style="@style/ErrorsTextView"
            android:layout_marginTop="46dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="@string/no_playlists"
            app:drawableTopCompat="@drawable/error_ic_nothing_was_found"
            android:visibility="visible"
            android:layout_gravity="center|top"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_frame"
            android:layout_marginStart="@dimen/margin_frame"
            android:layout_marginEnd="@dimen/margin_frame"
            />
    </LinearLayout>



</ScrollView>