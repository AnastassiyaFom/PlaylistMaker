<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/library"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".player.ui.activity.PlayerFragment"
    android:background="@color/background_not_main"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/backFromLibrary"
        style="@style/ReturnArrowStyle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/margin_frame"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="@dimen/margin_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/arrow_guideline_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/margin_frame"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/arrow_guideline_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/margin_frame"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/track_guideline_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="25dp" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/track_guideline_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="24dp"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/middle_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <ImageView
                android:id="@+id/track_image_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/track_guideline_left"
                app:layout_constraintEnd_toStartOf="@id/track_guideline_right"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingTop="26dp"
                android:layout_gravity="center|fill_vertical"
                tools:src="@drawable/album_placeholder_512"
                 />
            <TextView
                android:id="@+id/track_name_library"
                style="@style/Tittle"
                android:layout_marginStart="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/track_guideline_left"
                app:layout_constraintTop_toBottomOf="@id/track_image_library"
                android:paddingTop="26dp"
                tools:text = "Yesterday (Remastered 2009)"
                />
            <TextView
                android:id="@+id/artist_name_library"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/track_guideline_left"
                app:layout_constraintEnd_toStartOf="@id/track_guideline_right"
                app:layout_constraintTop_toBottomOf="@id/track_name_library"
                android:gravity="left"
                android:paddingTop="12dp"
                tools:text = "The Beatles"
                android:fontFamily="@font/ys_display_medium"
                android:textSize="14dp"
                android:textColor="@color/text"
                />
            <ImageView
                android:id="@+id/add_to_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_track_button"
                app:layout_constraintStart_toStartOf="@id/track_guideline_left"
                app:layout_constraintTop_toBottomOf="@id/artist_name_library"
                android:paddingTop="54dp"
                />
            <ImageView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/like"
                app:layout_constraintEnd_toStartOf="@id/track_guideline_right"
                app:layout_constraintTop_toBottomOf="@id/artist_name_library"
                android:paddingTop="54dp"
                />
            <ImageView
                android:id="@+id/like_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/like_selected"
                app:layout_constraintEnd_toStartOf="@id/track_guideline_right"
                app:layout_constraintTop_toBottomOf="@id/artist_name_library"
                android:paddingTop="54dp"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/play_button_play"
                app:layout_constraintEnd_toStartOf="@id/track_guideline_right"
                app:layout_constraintStart_toStartOf="@id/track_guideline_left"
                app:layout_constraintTop_toBottomOf="@id/artist_name_library"
                android:paddingTop="30dp"

                />

            <TextView
                android:id="@+id/playing_track_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                app:layout_constraintEnd_toStartOf="@id/track_guideline_right"
                app:layout_constraintStart_toStartOf="@id/track_guideline_left"
                app:layout_constraintTop_toBottomOf="@id/play_button"
                app:layout_goneMarginTop="130dp"
                android:paddingTop="4dp"
                android:fontFamily="@font/ys_display_medium"
                android:textSize="14dp"
                android:textColor="@color/text"
                />

            <TextView
                android:id="@+id/duration_text"
                style="@style/TrackInfoLibrary"
                android:text="@string/duration"
                app:layout_constraintStart_toStartOf="@id/arrow_guideline_left"
                app:layout_constraintTop_toBottomOf="@id/playing_track_time"
                android:paddingTop="39dp"
                />
            <TextView
                android:id="@+id/duration_data"
                style="@style/TrackInfoLibrary"
                android:textColor="@color/text"
                tools:text="05:22"
                app:layout_constraintEnd_toEndOf="@id/arrow_guideline_right"
                app:layout_constraintTop_toBottomOf="@id/playing_track_time"
                android:paddingTop="39dp"
                />
            <TextView
                android:id="@+id/collection_text"
                style="@style/TrackInfoLibrary"
                android:text="@string/album"
                app:layout_constraintStart_toStartOf="@id/arrow_guideline_left"
                app:layout_constraintTop_toBottomOf="@id/duration_text"
                android:paddingTop="@dimen/padding_in_library"
                />

            <TextView
                android:id="@+id/collection_data"
                style="@style/TrackInfoLibrary"
                android:layout_width="0dp"
                android:paddingTop="@dimen/padding_in_library"
                android:textColor="@color/text"

                app:layout_constraintEnd_toEndOf="@id/arrow_guideline_right"
                app:layout_constraintStart_toEndOf="@id/middle_guideline"
                app:layout_constraintTop_toBottomOf="@id/duration_data"

                android:gravity="end"
                tools:text="Yesterday (Remastered 2009)" />
            <TextView
                android:id="@+id/year_text"
                style="@style/TrackInfoLibrary"
                android:text="@string/year"
                app:layout_constraintStart_toStartOf="@id/arrow_guideline_left"
                app:layout_constraintTop_toBottomOf="@id/collection_data"
                android:paddingTop="@dimen/padding_in_library"
                />
            <TextView
                android:id="@+id/year_data"
                style="@style/TrackInfoLibrary"
                android:textColor="@color/text"
                tools:text="1965"
                app:layout_constraintEnd_toEndOf="@id/arrow_guideline_right"
                app:layout_constraintTop_toBottomOf="@id/collection_data"
                android:paddingTop="@dimen/padding_in_library"
                />
            <TextView
                android:id="@+id/genre_text"
                style="@style/TrackInfoLibrary"
                android:text="@string/genre"
                app:layout_constraintStart_toStartOf="@id/arrow_guideline_left"
                app:layout_constraintTop_toBottomOf="@id/year_text"
                android:paddingTop="@dimen/padding_in_library"
                />
            <TextView
                android:id="@+id/genre_data"
                style="@style/TrackInfoLibrary"
                android:textColor="@color/text"
                tools:text="Rock"
                app:layout_constraintEnd_toEndOf="@id/arrow_guideline_right"
                app:layout_constraintTop_toBottomOf="@id/year_data"
                android:paddingTop="@dimen/padding_in_library"
                />
            <TextView
                android:id="@+id/country_text"
                style="@style/TrackInfoLibrary"
                android:text="@string/country"
                app:layout_constraintStart_toStartOf="@id/arrow_guideline_left"
                app:layout_constraintTop_toBottomOf="@id/genre_text"
                android:paddingTop="@dimen/padding_in_library"
                android:paddingBottom="50dp"
                />
            <TextView
                android:id="@+id/country_data"
                style="@style/TrackInfoLibrary"
                android:textColor="@color/text"
                tools:text="Великобритания"
                app:layout_constraintEnd_toEndOf="@id/arrow_guideline_right"
                app:layout_constraintTop_toBottomOf="@id/genre_data"
                android:paddingTop="@dimen/padding_in_library"
                android:paddingBottom="50dp"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </LinearLayout>