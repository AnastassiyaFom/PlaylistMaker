<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playlistScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/playlist_image"
                android:layout_width="wrap_content"
                android:layout_height="360dp"
                android:layout_gravity="center|fill_vertical"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:src="@drawable/album_placeholder_512" />
            <ImageView
                android:id="@+id/backFromPlaylistScreen"
                style="@style/ReturnArrowStyle"
                app:tint="@color/black_grey"
                android:layout_marginStart="@dimen/margin_frame"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="@dimen/margin_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_frame">

            <TextView
                android:id="@+id/playlist_name"
                style="@style/Tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                android:fontFamily = "@font/ys_display_bold"
                android:paddingTop="24dp"
                android:paddingBottom="4dp"
                android:textColor="@color/black_grey"
                tools:text = "Bestsongs 2021"
                />

            <TextView
                android:id="@+id/playlist_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/playlist_name"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="18sp"
                android:textColor="@color/black_grey"
                tools:text="2022"
                />
            <TextView
                android:id="@+id/playlist_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/playlist_description"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="18sp"
                android:textColor="@color/black_grey"
                tools:text="300 минут"
                app:drawableEndCompat="@drawable/ic_point"
                />
            <TextView
                android:id="@+id/playlist_tracks_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/playlist_time"
                app:layout_constraintTop_toBottomOf="@id/playlist_description"
                android:paddingTop="4dp"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="18sp"
                android:textColor="@color/black_grey"
                tools:text="15 треков"
                />

            <ImageView
                android:id="@+id/shareTracks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_share_not_change"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/playlist_time"
                android:paddingTop="16dp"
                />
            <ImageView
                android:id="@+id/playlist_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tree_points"
                app:layout_constraintStart_toEndOf="@id/shareTracks"
                app:layout_constraintTop_toBottomOf="@id/playlist_time"
                android:paddingTop="16dp"
                android:layout_marginStart="@dimen/margin"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <View android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#991A1B22"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/bottom_sheet_tracks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="200dp"
        android:background="@drawable/bottom_sheet_background"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin"
            android:background="@drawable/rounder"
            />

        <TextView
            android:id="@+id/no_tracks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_tracks_in_pl"
            style="@style/TrackInfo"
            android:gravity="center"
            android:visibility="gone"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tracksRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="200dp"
        android:background="@drawable/bottom_sheet_background"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin"
            android:background="@drawable/rounder"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/playlist_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/background_not_main"
            android:layout_marginTop="12dp"
            android:paddingTop="@dimen/margin"
            android:paddingBottom="@dimen/margin"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="@dimen/margin">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/playlist_field"
                android:src = "@drawable/placeholder102"
                android:scaleType="centerInside"
                android:layout_gravity="center"

                app:shapeAppearanceOverlay="@style/RoundedCorners_2dp"
                />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="22.5dp"/>
            <TextView
                android:id="@+id/name"
                app:layout_constraintBottom_toBottomOf="@id/guideline"
                app:layout_constraintStart_toEndOf="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="@color/text"
                android:textSize="16sp"
                tools:text="Название "/>
            <TextView
                android:id="@+id/count"
                app:layout_constraintTop_toBottomOf="@id/guideline"
                app:layout_constraintStart_toEndOf="@+id/image"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="@color/add_playlist_frame"
                android:textSize="11sp"
                tools:text="157 треков"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/sharing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="21dp"
            android:paddingBottom="21dp"
            android:paddingStart="@dimen/margin_frame"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:text="@string/share"/>
        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="21dp"
            android:paddingBottom="21dp"
            android:paddingStart="@dimen/margin_frame"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:text="@string/edit_information"/>
        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="21dp"
            android:paddingBottom="21dp"
            android:paddingStart="@dimen/margin_frame"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:text="@string/delete_playlist"/>


    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>