<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_settings">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/margin_settings">

            <ImageView
                android:id="@+id/backToMainFromSearch"
                style="@style/ReturnArrowStyle"
                app:tint="@color/icon" />

            <TextView
                style="@style/Tittle"
                android:layout_marginTop="12dp"
                android:text="@string/Поиск"/>

        </LinearLayout>
        <FrameLayout
            android:paddingTop="@dimen/margin_settings"
            android:paddingLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/inputEditText"
                style="@style/SettingsTextView"
                android:background="@drawable/search_field"
                android:backgroundTint="@color/search_field"
                android:inputType="text"
                app:drawableStartCompat="@drawable/icon_search_14"
                app:drawableTint="@color/edit_text_field"
                android:hint="@string/Поиск"
                android:textColor="@color/black"
                android:textColorHint="@color/edit_text_field"
                android:textCursorDrawable="@color/black"
                android:lines="1"
                android:drawablePadding="@dimen/icon_padding"
                />
            <TextView
                android:id="@+id/clearSearch"
                style="@style/SettingsTextView"
                android:gravity="end"
                android:text="X"
                android:textSize="@dimen/settings_text_size"
                android:textColor="@color/black"
                android:backgroundTint="@color/search_field"
                android:visibility="gone"
                />
        </FrameLayout>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>