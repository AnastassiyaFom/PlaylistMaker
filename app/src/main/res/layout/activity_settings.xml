<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_settings">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/margin_settings">

            <ImageView
                android:id="@+id/backToMainFromSettings"
                style="@style/ReturnArrowStyle"
                app:tint="@color/icon"

                 />

            <TextView
                style="@style/Tittle"
                android:layout_marginTop="12dp"
                android:text="@string/Настройки"/>

        </LinearLayout>

        <Switch
            style="@style/SettingsTextView"
            android:text="@string/dark_theme"
            tools:ignore="UseSwitchCompatOrMaterialXml" />


        <TextView
            android:id="@+id/shareApp"
            style="@style/SettingsTextView"
            android:text="@string/share_app"
            app:drawableEndCompat="@drawable/icon_share" />

        <TextView
            android:id="@+id/textToSupport"
            style="@style/SettingsTextView"
            android:text="@string/write_to_support"
            app:drawableEndCompat="@drawable/icon_suppot" />


        <TextView
            android:id="@+id/userAgreement"
            style="@style/SettingsTextView"
            android:text="@string/user_agr"
            app:drawableEndCompat="@drawable/icon_arrow_forward" />


    </LinearLayout>


</LinearLayout>