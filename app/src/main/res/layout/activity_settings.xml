<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="24dp"
            android:paddingBottom="28dp"

            >

            <ImageView
                android:id="@+id/backToMainFromSettings"
                style="@style/ReturnArrowStyle"
                app:tint="@color/icon"
                android:paddingLeft="4dp"

                 />

            <TextView
                style="@style/Tittle"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:text="@string/Настройки"/>

        </LinearLayout>

        <Switch


            style="@style/SettingsTextView"
            android:layout_marginEnd="11dp"
            android:text="@string/dark_theme"
            tools:ignore="UseSwitchCompatOrMaterialXml"
            android:trackTint="@color/switch_track"
            android:thumbTint="@color/switch_tumb"

            />



        <TextView
            android:id="@+id/shareApp"
            style="@style/SettingsTextView"
            android:text="@string/share_app"
            app:drawableEndCompat="@drawable/icon_share"
            android:layout_marginEnd="19dp"
            />

        <TextView
            android:id="@+id/textToSupport"
            style="@style/SettingsTextView"
            android:text="@string/write_to_support"
            app:drawableEndCompat="@drawable/icon_suppot" />


        <TextView
            android:id="@+id/userAgreement"
            style="@style/SettingsTextView"
            android:text="@string/user_agr"
            app:drawableEndCompat="@drawable/icon_arrow_forward" />


    </LinearLayout>


</LinearLayout>