<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".main.ui.MainActivity"
    >

    <TextView

        style="@style/Tittle"
        android:textColor="@color/white"
        android:layout_gravity="start"
        android:text="@string/app_name"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="@dimen/margin"
        />

    <Button
        android:id="@+id/search"
        android:text="@string/Поиск"
        style="@style/BigButtonStyle"
        app:icon="@drawable/icon_search"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/black"
        app:cornerRadius="@dimen/radius"/>
    <Button
        android:id="@+id/library"
        android:text="@string/Медиатека"
        style="@style/BigButtonStyle"
        app:cornerRadius="@dimen/radius"
        app:icon="@drawable/icon_lib"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/black" />
    <Button
        android:id="@+id/settings"
        style="@style/BigButtonStyle"
        android:text="@string/Настройки"
        app:icon="@drawable/icon_settings"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/black"
        app:cornerRadius="@dimen/radius" />

</LinearLayout>




