<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/background_screan"
    android:layout_marginTop="@dimen/margin"
    android:layout_marginBottom="@dimen/margin"
    android:layout_marginStart="13dp">

    <ImageView
        android:id="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/playlist_field"
        android:src = "@drawable/placeholder102"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="22.5dp"/>
    <TextView
        android:id="@+id/name"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintStart_toEndOf="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="@color/text"
        android:textSize="16sp"
        tools:text="Название трека"/>
    <TextView
        android:id="@+id/count"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintStart_toEndOf="@+id/image"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="@color/add_playlist_frame"
        android:textSize="11sp"
        tools:text="157 треков"/>

</androidx.constraintlayout.widget.ConstraintLayout>