<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:backgroundTint="@color/background_screan">


    <ImageView
        android:id="@+id/album_image"
        app:layout_constraintStart_toStartOf ="parent"
        app:layout_constraintTop_toTopOf ="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        tools:ignore="MissingConstraints"
        tools:src="@drawable/placeholder" />
    <TextView
        android:id="@+id/track_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintLeft_toRightOf ="@+id/album_image"
        app:layout_constraintRight_toLeftOf="@id/to_track"
        tools:text = "Песенка очень-очень-очень-очень-очень-очень-очень-очень-очень длинннннннная"
        android:textSize="@dimen/track_name_text_size"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="@color/track_name"
        android:paddingTop="14dp"
        android:paddingStart="@dimen/margin"
        android:paddingEnd="@dimen/margin"
        tools:ignore="MissingConstraints"

        />
    <TextView
        android:id="@+id/artist_name"
        style="@style/TrackInfo"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf ="@+id/track_name"
        app:layout_constraintLeft_toRightOf ="@+id/album_image"
        app:layout_constraintRight_toLeftOf ="@+id/track_time"
        android:paddingStart="@dimen/margin"
        tools:text = "Исполнитель очень-очень-очень-очень-очень-очень-очень-очень-очень длинннннннный"
        app:drawableEndCompat="@drawable/ic_point"
        />
    <TextView
        android:id="@+id/track_time"
        style="@style/TrackInfo"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf ="@+id/track_name"
        app:layout_constraintLeft_toRightOf ="@+id/artist_name"
        app:layout_constraintRight_toLeftOf ="@+id/to_track"
        tools:text = "11:12"
        android:paddingEnd="@dimen/margin"

        />
    <ImageView
        android:layout_weight="1"
        android:id="@+id/to_track"
        app:layout_constraintRight_toRightOf ="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward_24"
        android:layout_marginEnd="12dp"
        android:paddingTop="18dp"
        tools:ignore="MissingConstraints"
        app:tint="@color/icon_todo"/>




</androidx.constraintlayout.widget.ConstraintLayout>

