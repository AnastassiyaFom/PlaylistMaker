<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BigButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginHorizontal">@dimen/margin</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/big_button_text_size</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="ReturnArrowStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="tint">@color/icon_back</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:paddingTop">2dp</item>


    </style>
    <style name="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>


    </style>
    <style name="SettingsTextView" parent="TextView">


        <item name="android:layout_marginTop">21dp</item>
        <item name="android:layout_marginBottom">21dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="drawableTint">@color/icon_todo</item>


    </style>

    <style name="ErrorsTextView" parent="TextView">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">102dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:drawablePadding">16dp</item>

    </style>



    <style name="Tittle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginLeft">12dp</item>

    </style>

    <style name="TrackInfo">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/artist_name_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/artist_name</item>
        <item name="android:paddingTop">1dp</item>


    </style>
    <style name="TextMedium14">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="LittleButton" parent="TextMedium14">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/refresh_button_text</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/refresh_button_tint</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="cornerRadius">54dp</item>
    </style>
    <style name="TrackInfoLibrary" parent="TrackInfo">
        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#AEAFB4</item>
    </style>
    <style name="TrackDataLibrary" parent="TrackInfoLibrary">
        <item name="android:textColor">@color/text</item>
    </style>


</resources>
